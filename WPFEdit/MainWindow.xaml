<Window x:Class="Lomont.ClScript.WPFEdit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFEdit"
        xmlns:vm="clr-namespace:Lomont.ClScript.WPFEdit.ViewModel"
        mc:Ignorable="d"
        Title="CL Script Editor" Height="800" Width="1000"
        Loaded="OnLoaded"
        >
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Command="{Binding LoadCommand}">Load</Button>
            <Button Command="{Binding SaveCommand}">Save</Button>
            <Button Command="{Binding ExportCommand}">Export</Button>
            <Button Command="{Binding CompileCommand}">Compile</Button>
        </StackPanel>
        <GroupBox Header="Messages" DockPanel.Dock="Bottom">
            <ListBox 
                FontFamily="Consolas"
                Height="200"
                ItemsSource="{Binding Messages}"
                />
        </GroupBox>
        <ListBox
            DockPanel.Dock="Right"
            ItemsSource="{Binding Tokens}"
            />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        <avalonEdit:TextEditor 
            Grid.Column="0"
            Background="Bisque"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    x:Name="textEditor"
    FontFamily="Consolas"
    SyntaxHighlighting="C#"
    FontSize="10pt"/>
            <GridSplitter
                Grid.Column="1"
                ResizeDirection="Columns"
                Width="3"
                />
            <avalonEdit:TextEditor 
            Grid.Column="2"
            Background="LightCyan"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    x:Name="treeView"
    FontFamily="Consolas"
    SyntaxHighlighting="C#"
    FontSize="10pt"/>
        </Grid>

    </DockPanel>
</Window>
